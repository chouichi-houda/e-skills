{% extends 'base.html.twig' %}

{% block title %}Edit Evaluation{% endblock %}
{% block search %}
{% endblock %}
{% block body %}

<div class="single-pro-review-area mt-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-payment-inner-st">
                    <h1 style="color: #909090">Edit Evaluation</h1>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                 <div class="review-content-section">
                                      <div class="row">
                                          {{ form_start(form ,{ 'attr':{'novalidate': 'novalidate' }})}}
                                          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                               <div class="devit-card-custom">
                                                   <div class="form-group">
                                                       {{ form_widget(form.evalNom,{'attr':{'class': 'form-control'}}) }}
                                                   </div>
                                                   <div class="form-group">
                                                       {{ form_widget(form.description,{'attr':{'class': 'form-control'}} )}}
                                                    </div>
                                                   <div class="form-group">
                                                       {{ form_widget(form.idForm,{'attr':{'class': 'form-control'}}) }}
                                                   </div>
                                                   {{ include('evaluation/_form.html.twig', {'button_label': 'Update'}) }}

                                                   {{ include('evaluation/_delete_form.html.twig') }}
                                                                        <br><br>
                                                   <a href="{{ path('evaluation_index') }}"> << back to list</a>
                                               </div>
                                          </div>
                                          {{ form_end(form) }}
                                      </div>
                                 </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
