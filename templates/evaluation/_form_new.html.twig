<div class="product-payment-inner-st">
    <h1 style="color: #909090">Create new Evaluation</h1>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="review-content-section">
                <div class="row">
                    {{ form_start(form,{ 'attr':{'novalidate': 'novalidate' }})}}
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="devit-card-custom">
                            <div class="form-group">
                                {{ form_widget(form.evalNom,{'attr':{'class': 'form-control','placeholder':'Nom Evaluation'}}) }}
                                {{ form_errors(form.evalNom) }}
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.description,{'attr':{'class': 'form-control','placeholder':'Description'}}) }}
                                {{ form_errors(form.description) }}
                            </div>
                            <div class="form-group" >
                                {{ form_label(form.idForm,"Formation") }}
                                {{ form_widget(form.idForm,{'attr':{'class': 'form-control'}}) }}
                                {{ form_errors(form.idForm) }}
                            </div>
                            <button class="btn" style="background: #006DF0;color: #fff;">{{ button_label|default('Save') }}</button>
                            {{ form_end(form) }}
                            <br><br>
                            <a href="{{ path('evaluation_index') }}"> << back to list</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



